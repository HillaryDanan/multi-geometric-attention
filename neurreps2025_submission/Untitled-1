# 4. Quick check
if [ -f "paper.pdf" ]; then
    echo "âœ… paper.pdf created successfully!"
    echo "ğŸ“„ Paper is ready for submission!"
    
    # Open the PDF (Mac)
    open paper.pdf
else
    echo "âŒ Something went wrong. Check for errors above."
fi

